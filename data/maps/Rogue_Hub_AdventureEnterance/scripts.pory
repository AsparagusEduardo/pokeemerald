const VAR_QUEST_REWARD_TYPE = VAR_0x8004
const VAR_QUEST_REWARD_PARAM0 = VAR_0x8005
const VAR_QUEST_REWARD_PARAM1 = VAR_0x8006

script Rogue_Adventure_SpeakScott
{
    lock
    faceplayer

    if(var(VAR_ROGUE_INTRO_STATE) <= 5)
    {
        msgbox(format("SCOTT: Hey {PLAYER}!\pJust go chat to the nurse over there and you can start exploring!"))
    }
    else
    {
        // Check for quest rewards
        nextquestreward
        if(var(VAR_RESULT) == TRUE)
        {
            msgbox(format("SCOTT: Hey {PLAYER}!\pI have some Quest Rewards for you!"))
            while(var(VAR_RESULT) == TRUE)
            {
                if(var(VAR_0x8000) == QUEST_REWARD_CUSTOM_TEXT)
                {
                    playfanfare(MUS_OBTAIN_ITEM)
                }
                else
                {
                    playse(SE_SHOP)
                }

                msgbox("{STR_VAR_3}")
                
                if(var(VAR_0x8000) == QUEST_REWARD_CUSTOM_TEXT)
                {
                    waitfanfare
                }
                else
                {
                    waitse
                }

                nextquestreward
            }

            msgbox(format("And that's all for the moment!"))

            // Check if our bag got full
            checkitemspace(ITEM_REVIVE)
            if(var(VAR_RESULT) == NO)
            {
                msgbox(format("Looks like you have a full bag there.\pBe sure to check your PC as some rewards may turn up there."))
            }

            msgbox(format("Good luck with your next Adventure champ!"))
        }
        else
        {
            msgbox(format("SCOTT: Hey {PLAYER}!\pBe sure to come and chat with me once you complete Quests so I can give you your rewards!"))
        }
    }

    release
}

movement Rogue_Adventure_ScottIntroMovement0
{
    face_down
    emote_exclamation_mark
    delay_16

    walk_left * 2
    walk_down * 2
}

script Rogue_Adventure_SpeakBasicBag
{
    lock
    faceplayer

    if(flag(FLAG_ROGUE_FORCE_BASIC_BAG))
    {
        msgbox(format("Would you like to disable the BASIC BAG?"), MSGBOX_YESNO)

        if(var(VAR_RESULT) == YES)
        {
            msgbox(format("OK. You'll no longer have the BASIC BAG when going on Adventures."), MSGBOX_DEFAULT)
            clearflag(FLAG_ROGUE_FORCE_BASIC_BAG)
        }
    }
    else
    {
        msgbox(format("Hi {PLAYER}!\pI can give you the BASIC BAG instead of your current one if you'd like.\pWhen you leave on an Adventure with a BASIC BAG you will have your BAG and MONEY reset so you will have none of the new upgrades you've gotten in the HUB.\pThis isn't permanent of course...\nYou will be given back you current contents once you return back to the HUB as per usual."))
        msgbox(format("Would you like to enable the BASIC BAG?"), MSGBOX_YESNO)

        if(var(VAR_RESULT) == YES)
        {
            msgbox(format("OK. You'll be given the BASIC BAG when going on Adventures."), MSGBOX_DEFAULT)
            setflag(FLAG_ROGUE_FORCE_BASIC_BAG)
        }
    }

    release
}

