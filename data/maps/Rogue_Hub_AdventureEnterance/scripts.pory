script Rogue_Adventure_StartStandard
{
    call(Rogue_ResetAdventureFlags)

    lock
    faceplayer

    // Yes No Info
    msgbox(format("Would you like to go on an adventure?"), MSGBOX_YESNO)

    if(var(VAR_RESULT) == YES)
    {
        call(Rogue_ResetAdventureFlags)
        call(Rogue_StartAdventureCommon)
    }
    else
    {
        msgbox(format("Feel free to speak with me again, if you change your mind."), MSGBOX_DEFAULT)
    }

    release
}

script Rogue_Adventure_StartDoubles
{
    call(Rogue_ResetAdventureFlags)

    lock
    faceplayer

    message(format("Would you like to go on a DOUBLEs adventure?"))
    waitmessage

    multichoice(20, 6, MULTI_YESNOINFO, NO)

    switch(var(VAR_RESULT))
    {
        case 0: // Yes
            call(Rogue_ResetAdventureFlags)
            setflag(FLAG_ROGUE_DOUBLE_BATTLES)
            call(Rogue_StartAdventureCommon)

        case 1: // No
            msgbox(format("Feel free to speak with me again, if you change your mind."), MSGBOX_DEFAULT)

        case 2: // Info
            msgbox(format("The adventure uses the same settings as the standard mode, however all TRAINER battles will forced to be DOUBLE battles."), MSGBOX_DEFAULT)

        case MULTI_B_PRESSED:
            msgbox(format("Feel free to speak with me again, if you change your mind."), MSGBOX_DEFAULT)
    }

    release
}

